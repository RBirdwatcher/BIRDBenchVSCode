{
    "name": "xtext-vscode-example",
    "displayName": "Xtext VS Code example",
    "description": "A simple DSL example for VS Code",
    "version": "0.0.31",
    "publisher": "itemis",
    "icon": "images/itemis.png",
    "license": "EPL-1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/itemis/xtext-languageserver-example.git"
    },
    "bugs": {
        "url": "https://github.com/itemis/xtext-languageserver-example/issues"
    },
    "engines": {
        "vscode": "^1.67.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:OpenRegSpecs"
    ],
    "main": "out/extension",
    "contributes": {
        "languages": [
            {
                "id": "OpenRegSpecs",
                "aliases": [
                    "OpenRegSpecs"
                ],
                "extensions": [
                    ".rpmn"
                ],
                "configuration": "./OpenRegSpecs.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "OpenRegSpecs",
                "scopeName": "text.OpenRegSpecs",
                "path": "./syntaxes/OpenRegSpecs.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "OpenRegSpecs.a.proxy",
                "title": "OpenRegSpecs Command A"
            },
            {
                "command": "OpenRegSpecs.b",
                "title": "OpenRegSpecs Command B"
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^17.0.34",
        "@types/vscode": "^1.67.0",
        "typescript": "^4.6.4",
        "@vscode/test-electron": "^2.1.3"
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.1"
    },
    "scripts": {
        "prepublish": "tsc -p ./src",
        "compile": "tsc -p ./src",
        "watch": "tsc -w -p ./src",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    }
}
